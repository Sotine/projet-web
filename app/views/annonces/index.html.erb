<p id="notice"><%= notice %></p>
<!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h1>Bienvenue sur le Boncoin de l'Iien</h1>
            <p> etre Iien c'est bien, partager ses biens c'est mieux</p>
            <!--<p><a class="btn btn-primary btn-large">Call to action!</a>
            </p>-->
        </header>

<hr>
<%= @annonces.each do |annonce| %>
<% if user_signed_in? %>
        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3><%=annonce.titre%></h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">

            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <!--<img src="http://placehold.it/800x500" alt="">-->
                    <% if annonce.image.present? %>
                    <img src="<%=annonce.image%>" alt="<%=annonce.titre%>" style="width:400px;height:250px">
                    <% else %>
                      <%= image_tag "800x500.gif", alt: annonce.titre %>
                    <% end %>
                    
                    
                    <div class="caption">
                        <!--<h3>Feature Label</h3>-->
                        <p><%=annonce.description%></p>
                        <p>
                            <a> <%= link_to 'J\'aimerais en savoir plus', annonce %> </a>
                        </p>
                    </div>
                </div>
            </div>
<% else %>
<!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3><%=annonce.titre%></h3>
            </div>
        </div>
<% end %>
<% end %>
